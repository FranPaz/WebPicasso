        <legend>Slider</legend>
        @Html.Partial("_CreateOrEdit", Model)
        <p>
            <input type="submit" value="Crear" class ="button" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Volver", "Index")
</div>
