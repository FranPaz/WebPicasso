@model PicassoWeb.Models.Slider
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>
    Crear</h2>
@using (Html.BeginForm("Create", "Slider", FormMethod.Post, new { @class = "custom", @enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)
