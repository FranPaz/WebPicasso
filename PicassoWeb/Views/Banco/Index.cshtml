@model IEnumerable<PicassoWeb.Models.Banco>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Nombre
        </th>
        <th>
            Imagen
        </th>
        <th>
            PromosBanco
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Nombre
        </td>
        <td>
			@item.Imagen
        </td>
        <td>
			@(item.PromosBanco == null ? "None" : item.PromosBanco.Count.ToString())
        </td>
    </tr>
}

</table>


