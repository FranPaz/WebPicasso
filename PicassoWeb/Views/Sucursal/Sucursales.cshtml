@model IEnumerable<PicassoWeb.Models.Sucursal>
@{
    Layout = "~/Views/Shared/_Foundation.cshtml";
}
@{
    ViewBag.Title = "Sucursales";
}
<h3>
    <img src="../../Images/Slider/gotas_picasso.png" class="alignleft" height="30" width="30" />
    <span class="titulosInfoPagina">SUCURSALES</span>
</h3>
<!-- fpaz: parte para los datos de la sucursal MODIFICADO 29/10/2013 -->
<div class="row">
    <!-- fpaz: parte para los datos de la sucursal -->
    @{
        <div class="large-5 columns left">
            @{
                int i = 0;
                foreach (var item in Model) {
                    if (item.Activo) {
                        if (i < 1) {
                <div class="row">
                    <p>@item.Nombre
                        <img src="@item.Foto" alt="sucursal" /></p>
                    <p>@item.Direccion</p>
                    <p>@item.Horarios</p>
                    <p>
                        <!-- Popup Sucursal -->
                        @Html.ActionLink("Detalles", "DetallesSucursal", new { Id = item.Id }, new { @class = "ajax-popup-link" })
                    </p>
                    <hr />
                </div>  
                            i++;
                        } else {
                            break;
                        }
                    }

                }
            }
            <!-- fpaz: parte para el google maps -->
        </div>
        <div class="large-7 columns rigth">
            @Html.Partial("SucursalesMapa")
            <!-- rsanch: Partial del mapa -->
        </div>     
    }
</div>
<div class="row">
    <!-- fpaz: parte para los datos de las sucursales debajo del mapa -->
    @{    int j = 0;
          foreach (var item in Model) {
              if (item.Activo) {
                  if (j >= 1) {
        <div class="large-4 columns left">
            <p>@item.Nombre
                <img src="@item.Foto" alt="sucursal" /></p>
            <p>@item.Direccion</p>
            <p>@item.Horarios</p>
            <p>
                <!-- Popup Sucursal -->
                @Html.ActionLink("Detalles", "DetallesSucursal", new { Id = item.Id }, new { @class = "ajax-popup-link" })
            </p>
            <hr />
        </div>                       
                  } else {
                      j++;
                  }
              }
          }
    }
</div>
<link href="../../Content/popup/magnific-popup.css" rel="stylesheet" type="text/css" />
<script src="../../Scripts/popup/popup.js" type="text/javascript"></script>
<script src="../../Scripts/zepto.js" type="text/javascript"></script>
<script type="text/javascript">
    $('.ajax-popup-link').magnificPopup({
        type: 'ajax'
    });    
</script>
