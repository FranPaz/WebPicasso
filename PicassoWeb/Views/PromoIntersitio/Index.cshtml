@model IEnumerable<PicassoWeb.Models.PromoIntersitio>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Nombre
        </th>
        <th>
            Descripcion
        </th>
        <th>
            DirImagen
        </th>
        <th>
            Activo
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Nombre
        </td>
        <td>
			@item.Descripcion
        </td>
        <td>
			<img src="@item.DirImagen" alt="@item.Descripcion"/>
        </td>
        <td>
			@item.Activo
        </td>
    </tr>
}

</table>


