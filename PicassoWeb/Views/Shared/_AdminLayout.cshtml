<!DOCTYPE html>
<!--[if IE 8]> 				 <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    @*Set the viewport width to device width for mobile *@
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Picasso Pinturerias</title>
    <!--fpaz: puse el titulo "Picasso Pinturerias" -->
    <link href="~/picassoIcon.ico" rel="shortcut icon" type="image/x-icon" />
    <!--rsanch: Cambie el favicon -->
    @*@Styles.Render("~/Content/foundation/css")*@
    <link href="~/Content/foundation/foundation.css" rel="stylesheet" />
    <link href="~/Content/foundation/foundation.mvc.css" rel="stylesheet" />
    <link href="~/Content/foundation/app.css" rel="stylesheet" />
    <link href="~/Content/foundation/component.css" rel="stylesheet" />
    <link href="~/Content/foundation/default.css" rel="stylesheet" />
    <link href="~/Content/foundation/redesSociales.css" rel="stylesheet" />
    @RenderSection("head", required: false)
    @Scripts.Render("~/bundles/modernizr")
    <script src="@Url.Content("~/Scripts/jquery.js")" type="text/javascript"></script>
    <!--rsanch: jQuery -->
</head>
<body>
    <nav class="top-bar">
      <ul class="title-area">
        <li><a href="/Home/Administrador"><img src="@Url.Content("~/Images/LogoPicasso.png")" style="width: 100px; height: 40px" alt="Picasso Pinturerias Logo"></a></li>
        <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
      </ul>

      <section class="top-bar-section">
        <ul class="left">
          @Html.Partial("_LoginPartial")
        </ul>

        <ul class="right">
          <li>@Html.ActionLink("Sucursales", "Index", "Sucursal")</li>
          <li>@Html.ActionLink("Promociones de Bancos", "Index", "PromoBanco")</li>
          <li>@Html.ActionLink("Promo Intersitio", "Index", "PromoIntersitio")</li>
          <li>@Html.ActionLink("Banco", "Index", "Banco")</li>
          <li>@Html.ActionLink("Producto", "Index", "Producto")</li>
        </ul>
      </section>

    </nav>
    @RenderBody()
    <script type="text/javascript" src="~/Scripts/foundation/foundation.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.abide.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.alerts.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.clearing.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.cookie.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.dropdown.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.forms.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.interchange.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.joyride.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.magellan.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.orbit.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.placeholder.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.reveal.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.section.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.tooltips.js"></script>
    <script type="text/javascript" src="~/Scripts/foundation/foundation.topbar.js"></script>
    <script type="text/javascript">
        $(document).foundation();
    </script>
</body>
</html>
