@model PicassoWeb.Models.Producto

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Producto</legend>

    <div class="display-label">descripcion</div>
    <div class="display-field">@Model.descripcion</div>

    <div class="display-label">imagen</div>
    <div class="display-field">@Model.imagen</div>

    <div class="display-label">atributos</div>
    <div class="display-field">@(Model.atributos == null ? "None" : Model.atributos.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


